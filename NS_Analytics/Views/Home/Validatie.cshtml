@model NS_Analytics.ViewModels.AnswersViewModel
@{

    ViewBag.Title = "Home Page";
}

<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Elicitatie", "Elicitatie", "Home")</li>
        <li>@Html.ActionLink("Analyse", "Analyse", "Home")</li>
        <li>@Html.ActionLink("Specificatie", "Specificatie", "Home")</li>
        <li>@Html.ActionLink("Validatie", "Validatie", "Home", htmlAttributes: new { @style = "background-color:#C0C0C0" })</li>
    </ul>
</div>

<h2>Validatie</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @for (var i = 0; i < Model.Answers.Count; i++)
        {
            <div class="form-group">
                <div class="col-md-10">
                    <div>
                        @Html.Label(Model.Answers[i].Question.Value, htmlAttributes: new { @style = "min-width:300px" })
                        @Html.RadioButtonFor(m => m.Answers[i].Value, 1, htmlAttributes: new { @class = "" }) Ja
                        @Html.RadioButtonFor(m => m.Answers[i].Value, 0, htmlAttributes: new { @class = "" }) Nee
                        @Html.EditorFor(m => m.Answers[i].Remark, new { htmlAttributes = new { @style = "float:right", @class = "form-control" } })
                    </div>
                    <div>

                    </div>
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
